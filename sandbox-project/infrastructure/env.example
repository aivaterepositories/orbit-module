# AWS Sandbox Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=sandbox_db

# Base URL (your Lightsail instance public IP or domain)
BASE_URL=http://your-lightsail-ip

# Project-specific environment variables
# Dispute Tracker
DISPUTE_TRACKER_DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/dispute_tracker
DISPUTE_TRACKER_NEXT_PUBLIC_SUPABASE_URL=https://jkohwooaoxhkoxsewovh.supabase.co
DISPUTE_TRACKER_NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Project 2 (example)
# PROJECT_2_DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/project_2

# Project 3 (example)
# PROJECT_3_DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/project_3

# AWS Configuration (for CLI management scripts)
AWS_REGION=us-east-1
AWS_LIGHTSAIL_INSTANCE_NAME=sandbox-demo-server
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

